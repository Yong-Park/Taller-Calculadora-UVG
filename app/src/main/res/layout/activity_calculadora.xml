<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Calculadora">
    <!-- parte par la calculadora!-->
    <TextView
        android:id="@+id/textResultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:gravity="right|bottom"
        android:textColor="#000000"
        android:textSize="28sp" />
    <!-- fila 4!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnLimpiar"
            android:layout_margin="4dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:text="Clear"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnDividir"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="/"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <!-- fila 3!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnSiete"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="7"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnOcho"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="8"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnNueve"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="9"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnMultiplicar"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="*"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- fila 2!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnCuatro"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="4"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnCinco"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="5"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnSeis"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="6"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnMenos"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="-"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!-- fila 1!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnUno"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="1"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnDos"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="2"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnTres"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="3"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnMas"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="+"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- fila 0!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnVacio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text=""
            android:visibility="invisible" />
        <Button
            android:id="@+id/btnCero"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="0"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnPunto"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="."
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnIgual"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="="
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--parte 1
    <TextView
        android:text="hola mundo"
        android:layout_width="160dp"
        android:layout_height="200dp"/>
    <Button
        android:layout_width="200dp"
        android:text="Prueba"
        android:layout_height="100dp"/>
    <TextView
        android:text="Hello world"
        android:textSize="26sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="100dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="100dp"
        android:layout_marginLeft="16sp"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="1"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_weight="2"
            android:layout_width="0dp"
            android:text="2"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="3"
            android:layout_height="wrap_content"/>
    </LinearLayout>
!-->
</LinearLayout>